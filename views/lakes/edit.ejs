<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%- lake.name%></h1>
        <div style="width: 30%; margin: 20px auto;">
            <form action="/lakes/<%= lake._id %>/?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="lake[name]" value="<%= lake.name %>" placeholder="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="lake[image]" value="<%= lake.image %>" placeholder="image url">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="lake[description]" value="<%= lake.description %>" placeholder="description">
                </div>
                
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div> 
                
            </form>
            <a href="/lakes">Go back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>